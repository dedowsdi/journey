1018.01.02
zsh:
  array:
    zsh array index starts at 1, unless KSH_ARRAYS option is set
    l=(a b c d e) ; echo ${#l[@]} ;  unset l[1] ; echo ${l[@]}

    typeset -A m; m[a]=A ; m[b]=B ; m[c]=C ; unset "m[b]" ; echo ${#m[@]} ; echo ${!m[@]} ; echo ${m[@]}

